<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBF6C9"
    android:paddingBottom="50dp"
    tools:context=".ActiveAcountActivity">
    <TextView
        android:id="@+id/activePage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="35dp"
        android:text="Kích hoạt tài khoản"
        android:textStyle="bold"
        android:textColor="#1E1414"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/groupSentActNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/activePage">
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:text="957532323"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="10dp"
            android:text="Chúng tôi đã gửi link xác nhận đến địa chỉ email của bạn."
            android:textSize="18dp" />
        <TextView
            android:id="@+id/checkActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:text="Kiểm tra kích hoạt"
            android:textSize="22dp"
            android:layout_margin="20dp"
            android:textColor="#227DEA"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/skipActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bỏ qua"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textColor="#2E87F3"
            android:gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:padding="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>