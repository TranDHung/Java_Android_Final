<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNoteActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAdd"
        android:layout_width = "match_parent"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.NoteAppFinal.PopupOverlay"
        android:layout_height = "?attr/actionBarSize" />
    <ScrollView
        android:id="@+id/groupImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/toolbarAdd">
    <LinearLayout
        android:id="@+id/groupAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/toolbarAdd"
        android:paddingTop="10dp">
        <EditText
            android:id="@+id/titleNoteCre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề"
            android:textSize="24dp"
            android:background="@null"
            android:layout_margin="16dp"/>
        <EditText
            android:id="@+id/contentNoteCre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chú"
            android:textSize="20dp"
            android:background="@null"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:id="@+id/groupPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="10dp">
            <EditText
                android:id="@+id/passwordOfNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:textSize="18dp"
                android:hint="Mật khẩu cho ghi chú"
                android:layout_weight="1"
                android:inputType="textPassword" />
            <ImageView
                android:id="@+id/iconPass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_baseline_key_off"/>
        </LinearLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/bottomAppBarLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/groupAdd"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:menu="@menu/bottom_menu"
                app:elevation="0dp"
                android:outlineAmbientShadowColor="@android:color/transparent"
                android:outlineSpotShadowColor="@android:color/transparent" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/audioSelected"
                android:layout_width="match_parent"
                android:background="#ECEBEB"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />
            <ImageView
                android:id="@+id/audioRemote"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_pause"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/audioSelected"
                app:layout_constraintRight_toLeftOf="@id/deleteAudio"/>
            <ImageView
                android:id="@+id/deleteAudio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_close"
                app:layout_constraintTop_toTopOf="@id/audioSelected"
                app:layout_constraintRight_toRightOf="@id/audioSelected"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp"/>
            <ImageView
                android:id="@+id/deleteImage"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="6dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_close"
                app:layout_constraintTop_toTopOf="@id/imageSelected"
                app:layout_constraintRight_toRightOf="@id/imageSelected"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="30dp"
            android:layout_marginHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <VideoView
                android:id="@+id/videoSelected"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="30dp"/>
            <ImageView
                android:id="@+id/deleteVideo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="6dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_close"
                app:layout_constraintTop_toTopOf="@id/videoSelected"
                app:layout_constraintRight_toRightOf="@id/videoSelected"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>